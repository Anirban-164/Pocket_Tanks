<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <AnchorPane prefHeight="600.0" prefWidth="1080.0">
        <children>
            <ImageView fitHeight="624.0" fitWidth="1080.0" layoutX="-1.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@main_menu.png" />
                </image>
            </ImageView>
            <Button fx:id="online" blendMode="DARKEN" layoutX="391.0" layoutY="517.0" mnemonicParsing="false" onAction="#startOnline" onKeyPressed="#startOnline" onMouseClicked="#startOnline" prefHeight="62.0" prefWidth="295.0">
                <font>
                    <Font name="System Italic" size="25.0" />
                </font>
            </Button>
            <Button fx:id="startButton" blendMode="DARKEN" layoutX="449.0" layoutY="438.0" mnemonicParsing="false" onAction="#startOffline" onMouseClicked="#startOffline" onMouseDragEntered="#startOffline" prefHeight="62.0" prefWidth="180.0" />
         <Button fx:id="exitButton" blendMode="DARKEN" layoutX="929.0" layoutY="14.0" mnemonicParsing="false" onAction="#exitGame" onMouseClicked="#exitGame" prefHeight="52.0" prefWidth="139.0" />
        </children></AnchorPane>
